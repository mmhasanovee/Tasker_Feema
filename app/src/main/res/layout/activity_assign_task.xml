<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AssignTaskActivity">

    <TextView
        android:textSize="22sp"
        android:layout_centerHorizontal="true"
        android:id="@+id/task_assigned_to_phone_number"
        android:text="Phone:"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_margin="15dp"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"
        android:id="@+id/task_assigned_id"
        android:layout_below="@id/task_assigned_to_phone_number"
        android:text="Task assignment "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <EditText
        android:textSize="20sp"
        android:layout_margin="15dp"
        android:hint="Task name/details"
        android:id="@+id/task_assigned_name"
        android:layout_below="@id/task_assigned_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:background="@drawable/button"
        android:padding="10dp"
        android:layout_margin="15dp"
        android:text="Assign the task"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/task_assigned_name"
        android:id="@+id/task_assigned_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</RelativeLayout>